<?xml version="1.0"?>
<component name="org.nuxeo.ecm.dicom.core.types">

  <require>org.nuxeo.ecm.core.CoreExtensions</require>
  <require>org.nuxeo.ecm.platform.mail.core.types.contrib</require>

  <extension target="org.nuxeo.ecm.core.schema.TypeService" point="schema">
    <schema name="dicom" src="schemas/dicom.xsd" prefix="dicom"/>
  </extension>

  <extension target="org.nuxeo.ecm.core.schema.TypeService" point="doctype">
    <doctype name="DICOM" extends="File">
      <schema name="files"/>
      <facet name="Commentable"/>
      <facet name="Folderish"/>
      <facet name="NXTag"/>
      <subtypes>
        <type>Video</type>
        <type>Picture</type>
      </subtypes>
    </doctype>
    <!-- allow DICOM within workspaces -->
    <doctype name="Workspace" append="true">
      <subtypes>
        <type>DICOM</type>
      </subtypes>
    </doctype>
    <!-- allow DICOM within folders -->
    <doctype name="Folder" append="true">
      <subtypes>
        <type>DICOM</type>
      </subtypes>
    </doctype>
  </extension>

</component>
